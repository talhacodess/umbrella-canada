    "build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "lucide-react": "^0.563.0",
    "nodemon": "^3.1.11"
  }
}
